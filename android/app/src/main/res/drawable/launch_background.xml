<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <gradient
            android:startColor="#1976D2" <!-- Deep Blue -->
            android:endColor="#4FC3F7" <!-- Light Blue -->
            android:angle="45" />
    </item>

    <!-- Logo in the Center -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/justanswer_logo" /> <!-- Replace with your actual logo filename -->
    </item>
</layer-list>
